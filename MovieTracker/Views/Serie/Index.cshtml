@model List<MovieTracker.DTOs.SerieDTO>  
@{  
    ViewData["Title"] = "Series";  
}  

<div class="container mt-4">  
    <div class="row">  
        <div class="align-content-lg-stretch col-lg-12">  
            <div class="d-flex justify-content-between align-items-center mb-4">  
                <h1 class="display-6"> @ViewData["Title"] </h1>  
                <a href="@Url.Action("Create", "Serie")" class="btn btn-success">  
                    <i class="bg-info bi-plus-circle"></i> Agregar Serie  
                </a>  
            </div>  

            <!--Mostrar las alertas-->  
            @await Html.PartialAsync("_Alerts")  
        </div>  
    </div>  
    <div class="row row-cols-1 row-cols-md-3 g-4">  
        @if(Model.Any())  
        {
            foreach (var serie in Model)
            {
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@serie.PosterUrl" class="card-img-top" alt="@serie.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@serie.Title</h5>
                            <p class="card-text">@serie.Description</p>
                            <p class="card-text">Temporadas: @serie.Seasons</p>
                            <p class="card-text">Ep: @serie.Episodes</p>
                            <a href="@Url.Action("Details", "Serie", new { id = serie.Id })" class="btn btn-primary">Detalles</a>
                        </div>
                    </div>

                </div>
            }
        }
        else
        {
            <h5>Comienza agregando una serie :D</h5>
        }  
    </div>  
</div>