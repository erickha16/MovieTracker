@{
    ViewData["Title"] = "Inicio - MovieTracker";
}

<div class="container my-5">
    <div class="hero-section text-center mb-5">
        <h1 class="display-3 fw-bold mb-4 text-danger">Bienvenido a <span class="text-white">MovieTracker</span></h1>
        <p class="lead text-light">Tu plataforma para organizar y descubrir películas y series</p>

        <div class="hero-image mt-4 mb-5">
            <img src="~/Uploads/movieTrackerLogo.png"
                 alt="MovieTracker Hero"
                 class="img-fluid rounded-3 shadow-lg"
                 style="max-height: 300px; width: 100%; object-fit: cover;">
        </div>
    </div>

    <div class="features-section row g-4 mb-5">
        <div class="col-md-4">
            <div class="card bg-dark border-danger h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-film fa-3x text-danger mb-3"></i>
                    <h3 class="text-white">Películas</h3>
                    <p class="text-muted">Organiza tu colección de películas favoritas</p>
                    <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-danger mt-2">Explorar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border-danger h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-tv fa-3x text-danger mb-3"></i>
                    <h3 class="text-white">Series</h3>
                    <p class="text-muted">Lleva el control de tus series pendientes</p>
                    <a asp-controller="Serie" asp-action="Index" class="btn btn-outline-danger mt-2">Explorar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border-danger h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-tags fa-3x text-danger mb-3"></i>
                    <h3 class="text-white">Géneros</h3>
                    <p class="text-muted">Explora por tus géneros cinematográficos favoritos</p>
                    <a asp-controller="Genre" asp-action="Index" class="btn btn-outline-danger mt-2">Explorar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="stats-section bg-dark rounded-3 p-4 mb-5 shadow">
        <div class="row text-center">
            <div class="col-md-3">
                <h2 class="text-danger fw-bold">1,000+</h2>
                <p class="text-light">Películas pos reistrar</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-danger fw-bold">500+</h2>
                <p class="text-light">Series para registrar</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-danger fw-bold">50+</h2>
                <p class="text-light">Géneros diferentes</p>
            </div>
            <div class="col-md-3">
                <h2 class="text-danger fw-bold">10,000+</h2>
                <p class="text-light">Usuarios satisfechos</p>
            </div>
        </div>
    </div>

    <div class="cta-section text-center py-5">
        <h2 class="text-white mb-4">¿Listo para comenzar?</h2>
        <a asp-controller="Movie" asp-action="Create" class="btn btn-danger btn-lg me-3">
            <i class="fas fa-plus-circle me-2"></i>Agregar Película
        </a>
        <a asp-controller="Serie" asp-action="Create" class="btn btn-outline-danger btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Agregar Serie
        </a>
    </div>
</div>