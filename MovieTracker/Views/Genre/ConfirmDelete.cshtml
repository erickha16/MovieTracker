@model MovieTracker.DTOs.GenreDTO
@{
    ViewData["Title"] = "Confirmar Eliminación de Género";
}

<div class="container py-4">
    <div class="delete-confirmation-card bg-dark border-danger rounded-4 overflow-hidden shadow-lg">
        <!-- Cabecera -->
        <div class="delete-header bg-danger text-white p-4 text-center">
            <h2 class="mb-0 fw-bold">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
            </h2>
        </div>

        <!-- Cuerpo -->
        <div class="p-4 p-lg-5">
            <!-- Mensaje de advertencia -->
            <div class="alert alert-danger border-danger bg-dark text-center">
                <h4 class="alert-heading fw-bold">
                    <i class="fas fa-skull-crossbones me-2"></i>¡Advertencia!
                </h4>
                <p class="mb-0">¿Estás seguro que deseas eliminar permanentemente este género?</p>
                <p class="mb-0">Esta acción afectará todas las películas y series asociadas y no se puede deshacer.</p>
            </div>

            <!-- Información del género -->
            <div class="genre-info-container bg-black rounded-3 p-4 mb-4 border border-danger">
                <div class="row">
                    <!-- Nombre del género -->
                    <div class="col-md-6">
                        <div class="genre-badge mb-4">
                            <h3 class="text-center">
                                <span class="badge bg-dark border border-danger text-white p-3">
                                    <i class="fas fa-tag me-2 text-danger"></i>@Model.Name
                                </span>
                            </h3>
                        </div>

                        <dl class="text-white">
                            <dt class="fw-bold text-danger">Estado:</dt>
                            <dd>
                                @if (Model.Active)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times me-1"></i> Inactivo
                                    </span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex flex-wrap justify-content-center gap-3 mt-5 pt-4 border-top border-danger">
                <a asp-action="Index" class="btn btn-outline-danger px-4">
                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                </a>
                <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-confirmation-card {
        border: 1px solid #dc3545;
        max-width: 800px;
        margin: 0 auto;
    }

    .delete-header {
        background-color: #dc3545 !important;
    }

    .genre-info-container {
        border: 1px solid #dc3545;
    }

    .genre-badge .badge {
        font-size: 1.5rem;
        white-space: normal;
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.1) !important;
        border-color: #dc3545 !important;
    }

    dl dt {
        opacity: 0.9;
    }

    dl dd {
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .genre-badge .badge {
            font-size: 1.2rem;
        }
    }
</style>