@model List<MovieTracker.DTOs.MovieDTO>
@{
    ViewData["Title"] = "Peliculas";
}

<div class="container mt-4">
    <div class="row">
        <div class="align-content-lg-stretch col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6"> @ViewData["Title"] </h1>
                <a href="@Url.Action("Create", "Movie")" class="btn btn-success">
                    <i class="bg-info bi-plus-circle"></i> Agregar Película
                </a>
            </div>

            <!--Mostrar las alertas-->
            @await Html.PartialAsync("_Alerts")  
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Any())
        {
            foreach (var movie in Model)
            {
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">@movie.Description</p>
                            <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn btn-primary">Detalles</a>
                        </div>
                    </div>

                </div>
            }
        }
        else
        {
            <h5>Comienza agregando una peli bien chida :D</h5>
        }

    </div>
</div>