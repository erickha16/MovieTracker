@model MovieTracker.DTOs.MovieDTO
@{
    ViewData["Title"] = "Eliminar Película";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-center text-danger fw-bold">
                <i class="fas fa-exclamation-triangle"></i> ¿Estás seguro de que deseas eliminar este producto?
            </h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Title):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Description):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Director):</dt>
                        <dd class="col-7">$@Html.DisplayFor(model => model.Director)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.HighSystem):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.HighSystem)</dd>

                        <dt class="col-5 fw-bold">@Html.DisplayNameFor(model => model.Genre):</dt>
                        <dd class="col-7">@Html.DisplayFor(model => model.Genre)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Movie")" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
                <button type="submit" form="delete-form" class="btn btn-danger px-4 py-2 ms-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            </div>
        </div>
    </div>

    <form id="delete-form" method="post" action="@Url.Action("Delete", "Movie", new { id = Model.Id })" class="d-none"></form>
</div>
